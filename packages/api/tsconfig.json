{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "./out",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "sourceRoot": "./src",
    "moduleResolution": "bundler",
    "types": ["bun"]
  },
  "include": ["./src/**/*.ts", "./src/*.ts"],
  "exclude": ["node_modules"]
}
