{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "./out",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "sourceRoot": "./src",
    "types": ["vitest/globals"]
  },
  "include": ["./src/*"]
}
